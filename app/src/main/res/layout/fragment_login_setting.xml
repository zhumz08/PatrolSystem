<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/login_main_layout"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/login_setting_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="服务器地址"
            android:layout_marginTop="18dp"
            android:id="@+id/id_server_ip"
            android:layout_below="@+id/textView7"
            android:text="192.168.1.232"
            android:layout_toEndOf="@+id/textView8" />

        <TextView
            android:text="服务器设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="30sp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/setting_ok_btn"
            android:layout_width="80dp"
            android:layout_height="@dimen/default_button_height"
            android:background="#09a3dc"
            android:gravity="center"
            android:text="确 定"
            android:textColor="@android:color/white"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/id_server_pass"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/setting_cancel_btn"
            android:layout_width="80dp"
            android:layout_height="@dimen/default_button_height"
            android:background="#09a3dc"
            android:gravity="center"
            android:text="取 消"
            android:textColor="@android:color/white"
            android:layout_below="@+id/id_server_pass"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="51dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="51dp" />

        <TextView
            android:text="服务器地址:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/login_setting_layout"
            android:layout_alignParentStart="true"
            android:layout_marginTop="63dp"
            android:id="@+id/textView8" />

        <TextView
            android:text="用户名:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/login_setting_layout"
            android:layout_alignStart="@+id/login_setting_layout"
            android:layout_marginTop="116dp"
            android:id="@+id/textView9" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="用户名"
            android:text="1"
            android:id="@+id/id_server_user"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/id_server_ip" />

        <TextView
            android:text="密 码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_alignBaseline="@+id/id_server_pass"
            android:layout_alignBottom="@+id/id_server_pass"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:hint="密码"
            android:text="0"
            android:layout_marginTop="21dp"
            android:id="@+id/id_server_pass"
            android:layout_below="@+id/id_server_user"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/id_server_user" />

    </RelativeLayout>


</RelativeLayout>
